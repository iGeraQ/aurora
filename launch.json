	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Django",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"runserver",
				"8000"
			],
			"django": true,
			"console": "integratedTerminal"
		},
		{
			"name": "Attach to Django",
			"type": "python",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": 5679
			},
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "."
				}
			]
		}
	]
}